<cleaner id="infrarecorder" os="windows">
  <label>InfraRecorder</label>
  <description>Optical disc burning software</description>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the program logs</description>
    <action command="delete" search="glob" path="$USERPROFILE\AppData\Roaming\InfraRecorder\logs\*"/>
    <!-- For Windows XP -->
    <action command="delete" search="glob" path="$APPDATA\InfraRecorder\logs\*"/>
  </option>
</cleaner>
