<cleaner id="backintime" os="linux">
  <label>Back In Time</label>
  <description>simple backup/snapshot system</description>
  <option id="logs">
    <label>Backup logs</label>
    <description>Delete logs of previous backup operations</description>
    <action search="glob" command="delete" path="~/.local/share/backintime/*.log"/>
  </option>
</cleaner>
