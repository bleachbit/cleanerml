<cleaner id="openshot" os="linux">
  <label>Openshot</label>
  <description>Create and edit videos and movies</description>
  <option id="thumbnails">
    <label>Thumbnails</label>
    <description>Delete generated thumbnail previews for clips</description>
    <action search="glob" command="delete" path="~/.openshot/thumbnail/*"/>
  </option>
</cleaner>
