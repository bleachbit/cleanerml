<cleaner id="zune" os="windows">
  <label>Zune</label>
  <description>Media Player</description>
  <option id="art_cache">
    <label>Art Cache</label>
    <description>Delete album cover cache</description>
    <action command="delete" search="walk.files" path="$USERPROFILE\AppData\Local\Microsoft\Zune\Art Cache\"/>
  </option>
  <option id="tfc">
    <label>Transcoded Files Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.files" path="$USERPROFILE\AppData\Local\Microsoft\Zune\Transcoded Files Cache\"/>
  </option>
</cleaner>
