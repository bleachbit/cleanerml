<cleaner id="bower" os="windows">
  <label>Bower</label>
  <description>Package Manager</description>
  <option id="cache_packages">
    <label>Package Cache</label>
    <description>Delete the cached packages</description>
    <action search="walk.files" command="delete" path="$APPDATA\bower\cache\packages"/>
  </option>
  <option id="cache_registry">
    <label>Registry Cache</label>
    <description>Delete the registry cache</description>
    <action search="walk.files" command="delete" path="$APPDATA\bower\cache\registry"/>
  </option>
</cleaner>
