<cleaner id="avs_audio_converter" os="windows">
  <label>AVS Audio Converter</label>
  <description>Converter</description>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs</description>
    <action command="delete" search="glob" path="$APPDATA\AVS4YOU\AVSAudioConverter\*.log"/>
  </option>
  <option id="mru">
    <label>Most recently used</label>
    <description>Delete the most recently used list</description>
    <action command="delete" search="file" path="$APPDATA\AVS4YOU\AVSAudioConverter\RecentFiles.txt"/>
  </option>
</cleaner>
